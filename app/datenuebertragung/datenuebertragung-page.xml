<Page class="page my-page" navigatingTo="onNavigatingTo" loaded="onLoaded" navigatingFrom="onNavigatingFrom" unloaded="onUnloaded" actionBarHidden="true" xmlns="http://schemas.nativescript.org/tns.xsd" >
    <ScrollView>
        <FlexboxLayout flexDirection="column" justifyContent="space-between" alignItems="stretch">
            <StackLayout row="2" col="0" orientation="vertical" width="auto" height="auto">
                <Label row="0" col="0" id="status" text="Ready" fontSize="{{ mySizeMessageSmall }}" class="status-message" horizontalAlignment="center" textWrap="true"></Label>
                <Label row="1" col="0" id="status" text="{{ currentQrCodeMessage }}" fontSize="{{ mySizeMessageSmall }}" class="status-message" horizontalAlignment="center" textWrap="true"></Label>
            </StackLayout>
            <StackLayout row="2" col="0" id="qrContainer" width="auto" height="auto">
                <!-- <Image id="img" width="auto" height="auto" stretch="aspectFit" /> -->
<!--                <svg:SVGImage id="svgImg" src="~/datenuebertragung/focus_optimizer.svg" class="qr-image" />-->
                <Image id="svgImg"/> src="~/datenuebertragung/focus_optimizer.png" class="qr-image" />

            </StackLayout>
            <Button row="3" col="0" id="createQR" text="{{ currentQrCodeButton }}" fontSize="{{ mySizeMessage }}" textWrap="true" class="-btn btn-primary my-button-primary capitalization" margin="5" tap="showQR" />
        </FlexboxLayout>
    </ScrollView>
</Page>
